<%= render "shared/header" %>

<div class="main">
  <h3>作業場所一覧</h3>
  <div class="site_menu">
    <%= form_with model: [@site, @location], local: false do |f| %>
      <div id="error_messages">
        <%= render'shared/error_messages', model: @location %>
      </div>
      <%= f.label :content, '作業場所を入力する' %><br>
      <%= f.text_field :content, autofocus: true %>
      <div class="site_search">
        <%= f.submit '作成する' %>
      </div>
    <% end %>
  </div>
  <div class="site_create">
    <%= link_to '戻る', item_list_site_path(@site) %>
  </div>

  <div id="locations">
    <%= render @locations %>
  </div>

</div>

<%= render "shared/footer" %>