<h2>パスワードをお忘れですか？</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form password-reset-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
  </div>

  <div class="form-actions">
    <%= f.submit "パスワードリセット手順を送信", class: "submit-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>