<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form login-form" }) do |f| %>
  <div class="form-field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
  </div>

  <div class="form-field">
    <%= f.label :password, 'パスワード' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-field remember-me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'ログイン状態を保持する' %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit "ログイン", class: "submit-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>