              <%# <canvas data-signature-pad-target="canvas" width="150" height="100"></canvas> %>
              <%= f.hidden_field :signature %>
            </div>
          </div>
        </div>
        <div class="priority_measure">
          <div class="sub_title">本日のKY重点対策目標</div>
          <div class="risk_content">
            <div class="location">
              <%= f.collection_select :location_id, @locations, :id, :content,
                { prompt: "選択してください" }, {class: "form-control" }
              %>
            </div>
            <textarea class="action_content"></textarea>
            <textarea class="risk_prediction"></textarea>
            <div class="risk_rate">
              <%= f.collection_select(
                :risk_level_id, RiskLevel.all, :id, :name, {}, {class:"risk_level-select"})
              %>
              <%= f.collection_select(
                :incidence_rate_id, IncidenceRate.all, :id, :name, {}, {class:"incidence_rate-select"})
              %>
            </div>
            <div class="risk_rate"><%= '〇Ajax' %></div>
            <textarea class="risk_measure"></textarea>
            <div class="director_sign">
              <canvas class="signature-pad" id="sig5" width="100" height="45"></canvas>
              <%# <canvas data-signature-pad-target="canvas" width="150" height="100"></canvas> %>
              <%= f.hidden_field :signature %>
            </div>
