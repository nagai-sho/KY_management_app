              %>
            </div>
            <div class="risk_rate"><%= '〇Ajax' %></div>
            <div class="risk_measure">
              <%= f.collection_select :safety_risk_measure_id, @safety_risk_measures, :id, :content,
                { prompt: "選択してください" }, {class: "form-control" }
              %>
            </div>
            <div class="director_sign">
              <canvas class="signature-pad" id="sig2" width="100" height="45"></canvas>
              <%= f.hidden_field :signature %>
            </div>
          </div>
        </div>

        <div class="quality_measure">
          <div class="sub_title">品質へのKY活動</div>
          <div class="risk_content">
            <div class="location">
            </div>
              <%= f.collection_select :location_id, @locations, :id, :content,
              { prompt: "選択してください" }, {class: "form-control" }
              %>
            <div class="action_content">
              <%= f.collection_select :construction_content_id, @construction_contents, :id, :content,
                { prompt: "選択してください" }, {class: "form-control" }
