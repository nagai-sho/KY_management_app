<div class="default_format">
  <div class="title">
    <h3>KY活動チェックシート</h3>
    <div class="return"><%= link_to '戻る', site_projects_path(@site) %></div>
  </div>

  <%= form_with model: [@project, @ky_sheet], local: true do |f| %>
  <%#= form_with (model: [@project, @ky_sheet], data: {controller: 'signature_pad', action: 'submit->signature_pad#save'}) do |f| %>
  <div data-controller="signature-pad">
    <div class="ky">
      <div class="top_content">
        <div class="ky_header">
          <div class="header_left">
            <div class="header_name">
              <div class="site_name">現場名　</div>
              <%= @ky_sheet.project.site.name %>
            </div>
            <div class="header_name">
              <div class="construction_name">工事件名　</div>
              <%= @ky_sheet.project.name %>
            </div>
          </div>
          <div class="header_center">
            <div class="header_name">
              <div class="company_name">会社名　</div>
              <%= current_user.company %>
            </div>
            <div class="header_name">
              <div class="construction_type">工事種別　</div>
              <%= f.collection_select(:construction_type_id, ConstructionType.all, :id, :name, {}, 
                {class:"construction_type-select"})
              %>
            </div>
          </div>
          <div class="header_right">
            <div class="header_name">
              <div class="work_day">作業日</div>
              <div class="calendar">
                <%= f.text_field :construction_completion, placeholder: '' %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="column">
        <div class="column_list">主な作業場所</div>
        <div class="column_list">作業内容</div>
        <div class="column_list">作業に伴うリスク / 危険Point</div>
        <div class="risk_evaluation">
          <div class="">リスク評価</div>
          <div class="risk_degree">
            <div class="rate">危険度</div>
            <div class="rate">発生率</div>
          </div>
        </div>
        <div id="", class="column_list">リスクレベル</div>
        <div class="column_list">リスク低減対策</div>
        <div class="column_list">管理者確認サイン</div>
      </div>

      <div class="input_area">
        <div class="safety_measure">
          <div class="sub_title">安全へのKY活動</div>
          <div class="risk_content">
            <div class="location">
              <%= f.collection_select :location_id, @locations, :id, :content,
                { prompt: "選択してください" }, {class: "form-control" }
              %>
            </div>
            <div class="action_content">
              <%= f.collection_select :construction_content_id, @construction_contents, :id, :content,
                { prompt: "選択してください" }, {class: "form-control" }
              %>
            </div>
            <div class="risk_prediction">
              <%= f.collection_select :safety_risk_prediction_id, @safety_risk_predictions, :id, :content,
                { prompt: "選択してください" }, {class: "form-control" }
              %>
            </div>
            <div class="risk_rate">
              <%= f.collection_select(
                :risk_level_id, RiskLevel.all, :id, :name, {}, {class:"risk_level-select"})
              %>
              <%= f.collection_select(
                :incidence_rate_id, IncidenceRate.all, :id, :name, {}, {class:"incidence_rate-select"})
              %>
            </div>
            <div class="risk_rate"><%= '〇Ajax' %></div>
            <div class="risk_measure">
              <%= f.collection_select :safety_risk_measure_id, @safety_risk_measures, :id, :content,
                { prompt: "選択してください" }, {class: "form-control" }
              %>
            </div>
            <div class="director_sign">
              <canvas class="signature-pad" id="sig1" width="100" height="45"></canvas>
              <%= f.hidden_field :signature %>
            </div>
          </div>
          <div class="risk_content">
            <div class="location">
              <%= f.collection_select :location_id, @locations, :id, :content,
                { prompt: "選択してください" }, {class: "form-control" }
              %>
            </div>
            <div class="action_content">
              <%= f.collection_select :construction_content_id,@construction_contents, :id, :content,
                { prompt: "選択してください" }, {class: "form-control" }
              %>
            </div>
            <div class="risk_prediction">
              <%= f.collection_select :safety_risk_prediction_id, @safety_risk_predictions, :id, :content,
