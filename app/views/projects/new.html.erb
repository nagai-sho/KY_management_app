<%= render 'shared/error_messages', model: @project %>
<div class="main">
  <h3>工事作成ページ</h3>
  <%= form_with model: [@site, @project], local: true do |f| %>
  <div class="new_form">
    <%= f.label :name, '工事件名' %>
    <%= f.text_field :name, autofocus: true, placeholder: '※必須' %>
    <%= f.label :client, '受注先' %>
    <%= f.text_field :client, placeholder: '' %>
    <%= f.label :construction_start, '工期（着工）' %>
    <%= f.date_field :construction_start, value: Date.current, placeholder: '' %>
    <%= f.label :construction_completion, '工期（竣工）' %>
    <%= f.date_field :construction_completion, value: Date.current, placeholder: '' %>
    <%= f.label :construction_content, '工事内容' %>
    <%= f.text_field :construction_content, placeholder: '' %>
  </div>
  <div class="create_button">
    <%= f.submit '作成する' %>
  </div>
  <% end %>
  <div class="previous_page">
    <%= link_to '戻る', site_projects_path(@site) %>
  </div>
</div>