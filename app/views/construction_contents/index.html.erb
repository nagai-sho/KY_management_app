<div class="main">
  <h3>作業内容一覧</h3>
  <div class="site_menu">
    <%= form_with model: [@site, @construction_content], local: false do |f| %>
      <div>
        <%= f.label :content, '作業内容を入力する' %><br>
        <%= f.text_area :content, autofocus: true, class: "item_input" %>
      </div>
      <div class="site_search">
        <%= f.submit '作成する' %>
      </div>
    <% end %>
  </div>
  <div class="previous_page">
    <%= link_to '戻る', item_list_site_path(@site) %>
  </div>

  <% @construction_contents.each do |construction_content| %>
  <div class="site_index">
    <div class="title"><%= construction_content.content %></div>
    <div class="projects">
      <%= link_to '削除', construction_content_path(construction_content),
        data: { turbo_method: :delete }
      %>
    </div>
  </div>
  <% end %>
</div>